generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String @id @default(uuid())
  username  String @unique
  password  String 
  profilePicture  String? //(was thinking string to store file path?)
  createdAt DateTime @default(now())

  // Relations
  hostedLobbies Lobby[]     @relation("LobbyHost")
  lobbies       Lobby[]     @relation("LobbyPlayers")
  flipbooks     Flipbook[]
  wonRounds     Round[]     @relation("RoundWinner")
  drawings      Drawing[]
  guesses       Guess[]
}

model Lobby {
  id        String     @id @default(uuid())
  roomCode  String     @unique
  state     LobbyState @default(WAITING)
  createdAt DateTime   @default(now())

  // Relations
  host        User       @relation("LobbyHost", fields: [hostId], references: [id])
  hostId      String
  players     User[]     @relation("LobbyPlayers")
  rounds      Round[]
}

model Round{
  id          String     @id @default(uuid())
  number      Int
  createdAt   DateTime   @default(now())
  
  // Relations
  lobby       Lobby      @relation(fields: [lobbyId], references: [id])
  lobbyId     String
  flipbooks   Flipbook[]
  winner      User?      @relation("RoundWinner", fields: [winnerId], references: [id])
  winnerId    String?
}

model Flipbook {
  id          String        @id @default(uuid())
  prompt      String        // Starting word/phrase for the flipbook
  votes       Int           @default(0)
  state       FlipbookState @default(DRAWING)
  createdAt   DateTime      @default(now())

  // Relations
  author      User          @relation(fields: [authorId], references: [id])
  authorId    String
  round       Round         @relation(fields: [roundId], references: [id])
  roundId     String
  drawings    Drawing[]
  guesses     Guess[]
}

model Drawing {
  id          String   @id @default(uuid())
  drawingData String   // Store JSON string or URL to image
  order       Int      // Position in the flipbook sequence
  createdAt   DateTime @default(now())

  // Relations
  flipbook    Flipbook @relation(fields: [flipbookId], references: [id])
  flipbookId  String
  author      User     @relation(fields: [authorId], references: [id])
  authorId    String
}

model Guess {
  id          String   @id @default(uuid())
  text        String
  order       Int      // Position in the flipbook sequence
  createdAt   DateTime @default(now())

  // Relations
  flipbook    Flipbook @relation(fields: [flipbookId], references: [id])
  flipbookId  String
  author      User     @relation(fields: [authorId], references: [id])
  authorId    String
}

enum LobbyState {
  WAITING
  STARTING
  IN_PROGRESS
  FINISHED
}

enum FlipbookState {
  DRAWING
  GUESSING
  VOTING
}
